  <div class="container">
    <div class="app-container">
      <!-- Modal de Login -->
      <div id="loginModal">
        <div class="login-container">
          <h2><i class="fas fa-lock"></i> Acesso às Videoaulas</h2>
          <form id="loginForm">
            <div class="form-group">
              <label for="loginEmail">Email:</label>
